{
  "category": "Mirrorless Cameras",
  "website": "amazon",
  "search_query": "mirrorless camera digital",
  "listing_selectors": {
    "product_container": "div[data-component-type='s-search-result']",
    "product_link": "h2 a"
  },
  "product_selectors": {
    "title": [
      {"selector": "span#productTitle"}
    ],
    "price": [
      {"selector": "span.a-price span.a-price-whole"}
    ],
    "rating": [
      {"selector": "span.a-icon-alt"}
    ]
  },
  "attributes": {
    "brand": {
      "method": "regex",
      "pattern": "(Sony|Canon|Nikon|Fujifilm|Panasonic|Olympus|Leica|Hasselblad|Pentax)",
      "source": "title",
      "flags": "IGNORECASE"
    },
    "model": {
      "method": "regex",
      "pattern": "(Alpha|EOS|Z\\d+|X-[A-Z]\\d+|LUMIX|OM-\\d+|[A-Z]+\\d+[A-Z]*)",
      "source": "title",
      "flags": "IGNORECASE"
    },
    "megapixels": {
      "method": "regex",
      "pattern": "(\\d+\\.?\\d*)\\s*MP",
      "source": "title",
      "flags": "IGNORECASE"
    },
    "sensor_type": {
      "method": "regex",
      "pattern": "(Full Frame|APS-C|Micro Four Thirds|MFT|Medium Format)",
      "source": "title",
      "flags": "IGNORECASE"
    },
    "video_capability": {
      "method": "regex",
      "pattern": "(4K|8K|Full HD|1080p|2160p|UHD)",
      "source": "title",
      "flags": "IGNORECASE"
    },
    "lens_mount": {
      "method": "regex",
      "pattern": "(E-Mount|RF Mount|Z Mount|X Mount|L Mount|MFT Mount)",
      "source": "title",
      "flags": "IGNORECASE"
    },
    "kit_type": {
      "method": "regex",
      "pattern": "(Body Only|Kit|Bundle|with Lens)",
      "source": "title",
      "flags": "IGNORECASE"
    },
    "color": {
      "method": "regex",
      "pattern": "(Black|Silver|Gray|Grey)",
      "source": "title",
      "flags": "IGNORECASE"
    }
  }
}

